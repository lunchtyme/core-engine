<!-- Text snippet -->
<tr id="text-snippet" class="space-t-1 space-b-1" style="Margin:0;margin-top:1rem;margin-bottom:1rem;display: block;">
  <td style="Margin:0;padding:0;">
    <p class="email-text" style="Margin:0;padding:0;color:var(--para-text-color, #616467);font-size:1rem;">
      Below is a breakdown of the order.
    </p>
  </td>
</tr>
<!-- End of text snippet -->


<tr id="order-items" class="space-t-1 space-b-1" style="Margin:0;margin-top:1rem;margin-bottom:1rem;display: block;">
  <td style="Margin:0;padding:0;">
    <table style="border-collapse: collapse; width: 100%;">
      <thead>
        <tr>
          <th style="border: 1px solid #ccc; padding: 8px;">Item</th>
          <th style="border: 1px solid #ccc; padding: 8px;">Qty</th>
          <th style="border: 1px solid #ccc; padding: 8px;">Price</th>
        </tr>
      </thead>
      <tbody>
        {{#each items}}
        <tr>
          <td style="border: 1px solid #ccc; padding: 8px;">{{name}}</td>
          <td style="border: 1px solid #ccc; padding: 8px;">{{quantity}}</td>
          <td style="border: 1px solid #ccc; padding: 8px;">{{price}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </td>
</tr>

<tr id="order-total" class="space-t-1 space-b-1" style="Margin:0;margin-top:1rem;margin-bottom:1rem;display: block;">
  <td style="Margin:0;padding:0;">
    <p class="email-text" style="Margin:0;padding:0;color:var(--para-text-color, #616467);font-size:1rem;">
      <b>Total:</b>{{amount}}
    </p>
  </td>
</tr>

