{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "target": "ES6",
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "typings/**/*.d.ts" // Ensure typings are included
  ],
  "exclude": [
    "dist"
  ]
}